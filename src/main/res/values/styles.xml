<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPurpleLink</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPurpleLink</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Theme Styles -->
    <style name="HeaderText" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="HeaderTextWithLine" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/bg_line_bottom</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="NoteText" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="RedText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="LinkText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPurpleLink</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="BigNumberText" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_big_xx</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_marginBottom">-14dp</item>
    </style>

    <style name="HeaderBigText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="HeaderMediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="HeaderMediumLittleText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/font_medium_x</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeaderSmallText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProfileText" parent="TextAppearance.AppCompat.Large">
        <item name="android:background">@drawable/empty_profile_image</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_big_x</item>
        <item name="android:textColor">@color/colorPurpleLink</item>
    </style>

    <style name="EditTextSingleLine" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditTextSingleLine.WithoutLine" parent="EditTextSingleLine">
        <item name="android:textColor">@color/colorPurpleLight</item>
        <item name="android:textColorHint">@color/colorPurpleLight</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShareQtyEditText" parent="EditTextSingleLine.WithoutLine">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LoginEditText" parent="EditTextSingleLine.WithoutLine">
        <item name="android:layout_marginStart">@dimen/edt_horizontal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/edt_horizontal_spacing</item>
        <item name="android:paddingBottom">@dimen/edt_vertical_spacing</item>
        <item name="android:paddingTop">@dimen/edt_vertical_spacing</item>
        <item name="android:background">@drawable/bg_line_bottom</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textColorHint">@color/colorGrey</item>
    </style>

    <style name="Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:background">@drawable/bg_button_line</item>
        <item name="android:textColor">@color/colorPurpleLink</item>
    </style>

    <style name="DefaultButtonThin" parent="DefaultButton">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RedButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_button_line_red</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="PurpleButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_button_purple</item>
    </style>

    <style name="WhiteButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_button_line_grey</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="WhiteButtonThin" parent="WhiteButton">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TabMainMenuTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_small_x</item>
        <item name="android:textColor">@color/colorMenuText</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavDrawerTextAppearance" parent="Widget.Design.NavigationView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:paddingStart">16dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LineDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:src">@drawable/numberpicker_line</item>
    </style>

    <style name="NavDrawer">
        <item name="android:padding">0dp</item>
    </style>

    <style name="NumberPicker">
        <item name="android:textSize">@dimen/font_big</item>
    </style>

</resources>
