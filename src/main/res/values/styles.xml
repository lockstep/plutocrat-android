<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPurpleLink</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Theme Styles -->
    <style name="HeaderText" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="HeaderTextWithLine" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/bg_line_bottom</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="NoteText" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="RedText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="LinkText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPurpleLink</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="BigNumberText" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_big_x</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="HeaderBigText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="HeaderMediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="HeaderSmallText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextSingleLine" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="DefaultButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_button_red</item>
    </style>

    <style name="PurpleButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_button_purple</item>
    </style>

    <style name="TabMainMenuTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_small_x</item>
        <item name="android:textColor">@color/colorMenuText</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavDrawerTextAppearance" parent="Widget.Design.NavigationView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:paddingStart">16dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavDrawer">
        <item name="android:padding">0dp</item>
    </style>

</resources>
