<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/colorButtonPurple" />
            <stroke
                android:width="1dp"
                android:color="@color/colorButtonPurple" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorButtonPurplePressed" />
            <stroke
                android:width="1dp"
                android:color="@color/colorButtonPurplePressed" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>